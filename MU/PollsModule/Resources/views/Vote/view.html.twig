{# purpose of this template: votes list view #}
{% extends routeArea == 'admin' ? 'MUPollsModule::adminBase.html.twig' : 'MUPollsModule::base.html.twig' %}
{% block title own ? __('My votes') : __('Vote list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="mupollsmodule-vote mupollsmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@MUPollsModule/Vote/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('mupollsmodule_vote_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="votesViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                <col id="cIdOfOption" />
                <col id="cIdOfPoll" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="mupolls-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted z-w02">{{ __('Actions') }}</th>
                <th id="hIdOfOption" scope="col" class="text-right">
                    <a href="{{ sort.idOfOption.url }}" title="{{ __f('Sort by %s', {'%s': 'id of option'}) }}" class="{{ sort.idOfOption.class }}">{{ __('Id of option') }}</a>
                </th>
                <th id="hIdOfPoll" scope="col" class="text-right">
                    <a href="{{ sort.idOfPoll.url }}" title="{{ __f('Sort by %s', {'%s': 'id of poll'}) }}" class="{{ sort.idOfPoll.class }}">{{ __('Id of poll') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for vote in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ vote.id }}" class="mupolls-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ vote.id }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('MUPollsModule:ItemActionsMenu:menu', [], { entity: vote, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ vote.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
                <td headers="hIdOfOption" class="text-right">
                    {{ vote.idOfOption }}
                </td>
                <td headers="hIdOfPoll" class="text-right">
                    {{ vote.idOfPoll }}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}4{% else %}3{% endif %}">
            {{ __('No votes found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'mupollsmodule_vote_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="mUPollsModuleAction" class="col-sm-3 control-label">{{ __('With selected votes') }}</label>
                <div class="col-sm-6">
                    <select id="mUPollsModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if hasPermission('MUPollsModule:Vote:', '::', 'ACCESS_EDIT') %}
                {% set createTitle = __('Create vote') %}
                <a href="{{ path('mupollsmodule_vote_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if showAllEntries == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('mupollsmodule_vote_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('mupollsmodule_vote_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='mupollsmodule.ui_hooks.votes.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
