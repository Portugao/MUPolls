{# purpose of this template: options admin list view #}
{% extends 'MUPollsModule::adminBase.html.twig' %}
{% block title own ? __('My options') : __('Options list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="mupollsmodule-option mupollsmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@MUPollsModule/Option/Admin/viewQuickNav.html.twig', {workflowStateFilter: false}) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('mupollsmodule_option_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="optionsViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                <col id="cTitle" />
                <col id="cColorOfOption" />
                <col id="cIdOfPoll" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="mupolls-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted z-w02">{{ __('Actions') }}</th>
                <th id="hTitle" scope="col" class="text-left">
                    <a href="{{ sort.title.url }}" title="{{ __f('Sort by %s', {'%s': 'title'}) }}" class="{{ sort.title.class }}">{{ __('Title') }}</a>
                </th>
                <th id="hColorOfOption" scope="col" class="text-left">
                    <a href="{{ sort.colorOfOption.url }}" title="{{ __f('Sort by %s', {'%s': 'color of option'}) }}" class="{{ sort.colorOfOption.class }}">{{ __('Color of option') }}</a>
                </th>
                <th id="hIdOfPoll" scope="col" class="text-right">
                    <a href="{{ sort.idOfPoll.url }}" title="{{ __f('Sort by %s', {'%s': 'id of poll'}) }}" class="{{ sort.idOfPoll.class }}">{{ __('Id of poll') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for option in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ option.getKey() }}" class="mupolls-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ option.getKey() }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('MUPollsModule:ItemActionsMenu:menu', [], {entity: option, area: routeArea, context: 'view'}) %}
                    <div class="dropdown">
                        <a id="itemActions{{ option.getKey() }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, {template: 'ZikulaMenuModule:Override:actions.html.twig'}) }}
                    </div>
                </td>
                <td headers="hTitle" class="text-left">
                    <a href="{{ path('mupollsmodule_option_' ~ routeArea ~ 'display', {'id': option.getId()}) }}" title="{{ __('View detail page')|e('html_attr') }}">{{ option.title|notifyFilters('mupollsmodule.filterhook.options')|safeHtml }}</a>
                </td>
                <td headers="hColorOfOption" class="text-left">
                    {{ option.colorOfOption }}
                </td>
                <td headers="hIdOfPoll" class="text-right">
                    {{ option.idOfPoll }}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}5{% else %}4{% endif %}">
            {{ __('No options found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if all != 1 and pager|default %}
            {{ pager({rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'mupollsmodule_option_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="mUPollsModuleAction" class="col-sm-3 control-label">{{ __('With selected options') }}</label>
                <div class="col-sm-6">
                    <select id="mUPollsModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if hasPermission('MUPollsModule:Option:', '::', 'ACCESS_EDIT') %}
                {% set createTitle = __('Create option') %}
                <a href="{{ path('mupollsmodule_option_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if all == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('mupollsmodule_option_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('mupollsmodule_option_' ~ routeArea ~ 'view', {all: 1}) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {{ notifyDisplayHooks(eventName='mupollsmodule.ui_hooks.options.display_view', urlObject=currentUrlObject) }}
    {% endif % #}
{% endblock %}
