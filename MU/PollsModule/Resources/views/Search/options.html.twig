{# Purpose of this template: Display search options #}
<input type="hidden" id="mUPollsModuleActive" name="active[MUPollsModule]" value="1" />
{% if active_option is defined %}
    <div>
        <input type="checkbox" id="active_mUPollsModuleOptions" name="mUPollsModuleSearchTypes[]" value="option"{% if active_option %} checked="checked"{% endif %} />
