        <label for="active_mUPollsModulePolls">{{ __('Polls', 'mupollsmodule') }}</label>
    </div>
{% endif %}
{% if active_vote is defined %}
    <div>
        <input type="checkbox" id="active_mUPollsModuleVotes" name="mUPollsModuleSearchTypes[]" value="vote"{% if active_vote %} checked="checked"{% endif %} />
        <label for="active_mUPollsModuleVotes">{{ __('Votes', 'mupollsmodule') }}</label>
    </div>
{% endif %}
