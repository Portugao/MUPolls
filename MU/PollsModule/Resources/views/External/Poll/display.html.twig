{# Purpose of this template: Display one certain poll within an external context #}
<div id="poll{{ poll.getKey() }}" class="mupollsmodule-external-poll">
{% if displayMode == 'link' %}
    <p class="mupollsmodule-external-link">
    <a href="{{ path('mupollsmodule_poll_display', {'id': poll.getId()}) }}" title="{{ poll|mupollsmodule_formattedTitle|e('html_attr') }}">
    {{ poll|mupollsmodule_formattedTitle|notifyFilters('polls.filter_hooks.polls.filter')|safeHtml }}
    </a>
    </p>
{% endif %}
{% if hasPermission('MUPollsModule::', '::', 'ACCESS_EDIT') %}
    {# for normal users without edit permission show only the actual file per default #}
    {% if displayMode == 'embed' %}
        <p class="mupollsmodule-external-title">
            <strong>{{ poll|mupollsmodule_formattedTitle|notifyFilters('polls.filter_hooks.polls.filter')|safeHtml }}</strong>
        </p>
    {% endif %}
{% endif %}

{% if displayMode == 'link' %}
{% elseif displayMode == 'embed' %}
    <div class="mupollsmodule-external-snippet">
        &nbsp;
    </div>

    {# you can distinguish the context like this: #}
    {# % if source == 'block' %}
        ... detail block
    {% elseif source == 'contentType' %}
        ... detail content type
    {% elseif source == 'scribite' %}
        ...
    {% endif % #}

    {# you can enable more details about the item: #}
    {#
        <p class="mupollsmodule-external-description">
            {% if poll.description is not empty %}{{ poll.description }}<br />{% endif %}
        </p>
    #}
{% endif %}
</div>
