{# purpose of this template: polls list view #}
{% extends routeArea == 'admin' ? 'MUPollsModule::adminBase.html.twig' : 'MUPollsModule::base.html.twig' %}
{% block title own ? __('My polls') : __('Poll list') %}
{% block admin_page_icon 'list-alt' %}
{% block content %}
<div class="mupollsmodule-poll mupollsmodule-view">

    {{ block('page_nav_links') }}

    {{ include('@MUPollsModule/Poll/viewQuickNav.html.twig', { workflowStateFilter: false }) }}{# see template file for available options #}

    {% if routeArea == 'admin' %}
    <form action="{{ path('mupollsmodule_poll_' ~ routeArea ~ 'handleselectedentries') }}" method="post" id="pollsViewForm" class="form-horizontal" role="form">
        <div>
    {% endif %}
        <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover{% if routeArea == 'admin' %} table-condensed{% endif %}">
            <colgroup>
                {% if routeArea == 'admin' %}
                    <col id="cSelect" />
                {% endif %}
                <col id="cItemActions" />
                <col id="cTitle" />
                <col id="cDescription" />
                <col id="cMultiple" />
                <col id="cDateOfStart" />
                <col id="cDateOfEnd" />
                <col id="cInFrontend" />
            </colgroup>
            <thead>
            <tr>
                {% if routeArea == 'admin' %}
                    <th id="hSelect" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}text-center z-w02">
                        <input type="checkbox" class="mupolls-mass-toggle" />
                    </th>
                {% endif %}
                <th id="hItemActions" scope="col" class="{% if items|length > 0 %}fixed-column {% endif %}z-order-unsorted z-w02">{{ __('Actions') }}</th>
                <th id="hTitle" scope="col" class="text-left">
                    <a href="{{ sort.title.url }}" title="{{ __f('Sort by %s', {'%s': 'title'}) }}" class="{{ sort.title.class }}">{{ __('Title') }}</a>
                </th>
                <th id="hDescription" scope="col" class="text-left">
                    <a href="{{ sort.description.url }}" title="{{ __f('Sort by %s', {'%s': 'description'}) }}" class="{{ sort.description.class }}">{{ __('Description') }}</a>
                </th>
                <th id="hMultiple" scope="col" class="text-center">
                    <a href="{{ sort.multiple.url }}" title="{{ __f('Sort by %s', {'%s': 'multiple'}) }}" class="{{ sort.multiple.class }}">{{ __('Multiple') }}</a>
                </th>
                <th id="hDateOfStart" scope="col" class="text-left">
                    <a href="{{ sort.dateOfStart.url }}" title="{{ __f('Sort by %s', {'%s': 'date of start'}) }}" class="{{ sort.dateOfStart.class }}">{{ __('Date of start') }}</a>
                </th>
                <th id="hDateOfEnd" scope="col" class="text-left">
                    <a href="{{ sort.dateOfEnd.url }}" title="{{ __f('Sort by %s', {'%s': 'date of end'}) }}" class="{{ sort.dateOfEnd.class }}">{{ __('Date of end') }}</a>
                </th>
                <th id="hInFrontend" scope="col" class="text-center">
                    <a href="{{ sort.inFrontend.url }}" title="{{ __f('Sort by %s', {'%s': 'in frontend'}) }}" class="{{ sort.inFrontend.class }}">{{ __('In frontend') }}</a>
                </th>
            </tr>
            </thead>
            <tbody>
        
        {% for poll in items %}
            <tr>
                {% if routeArea == 'admin' %}
                    <td headers="hSelect" class="fixed-column text-center z-w02">
                        <input type="checkbox" name="items[]" value="{{ poll.id }}" class="mupolls-toggle-checkbox" />
                    </td>
                {% endif %}
                <td id="itemActions{{ poll.id }}" headers="hItemActions" class="fixed-column actions nowrap z-w02">
                    {% set itemActions = knp_menu_get('MUPollsModule:ItemActionsMenu:menu', [], { entity: poll, area: routeArea, context: 'view' }) %}
                    <div class="dropdown">
                        <a id="itemActions{{ poll.id }}DropDownToggle" role="button" data-toggle="dropdown" data-target="#" href="javascript:void(0);" class="hidden dropdown-toggle"><i class="fa fa-tasks"></i> <span class="caret"></span></a>
                        {{ knp_menu_render(itemActions, { template: 'ZikulaMenuModule:Override:actions.html.twig' }) }}
                    </div>
                </td>
                <td headers="hTitle" class="text-left">
                    <a href="{{ path('mupollsmodule_poll_' ~ routeArea ~ 'display', { 'id': poll.id }) }}" title="{{ __('View detail page')|e('html_attr') }}">{{ poll.title|notifyFilters('mupollsmodule.filterhook.polls') }}</a>
                </td>
                <td headers="hDescription" class="text-left">
                    {{ poll.description|safeHtml|truncate(50) }}
                </td>
                <td headers="hMultiple" class="text-center">
                    {% if poll.multiple %}
                        <i class="fa fa-check" title="{{ __('Yes') }}"></i>
                    {% else %}
                        <i class="fa fa-times" title="{{ __('No') }}"></i>
                    {% endif %}
                </td>
                <td headers="hDateOfStart" class="text-left">
                    {{ poll.dateOfStart|localizeddate('medium', 'short') }}
                </td>
                <td headers="hDateOfEnd" class="text-left">
                    {{ poll.dateOfEnd|localizeddate('medium', 'short') }}
                </td>
                <td headers="hInFrontend" class="text-center">
                    {% if poll.inFrontend %}
                        <i class="fa fa-check" title="{{ __('Yes') }}"></i>
                    {% else %}
                        <i class="fa fa-times" title="{{ __('No') }}"></i>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr class="z-{{ routeArea == 'admin' ? 'admin' : 'data' }}tableempty">
                <td class="text-left" colspan="{% if routeArea == 'admin' %}8{% else %}7{% endif %}">
            {{ __('No polls found.') }}
              </td>
            </tr>
        {% endfor %}
        
            </tbody>
        </table>
        </div>
        
        {% if showAllEntries != 1 and pager|default %}
            {{ pager({ rowcount: pager.amountOfItems, limit: pager.itemsPerPage, display: 'page', route: 'mupollsmodule_poll_' ~ routeArea ~ 'view'}) }}
        {% endif %}
    {% if routeArea == 'admin' %}
            <fieldset>
                <label for="mUPollsModuleAction" class="col-sm-3 control-label">{{ __('With selected polls') }}</label>
                <div class="col-sm-6">
                    <select id="mUPollsModuleAction" name="action" class="form-control input-sm">
                        <option value="">{{ __('Choose action') }}</option>
                        <option value="delete" title="{{ __('Delete content permanently.') }}">{{ __('Delete') }}</option>
                    </select>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="{{ __('Submit') }}" class="btn btn-default btn-sm" />
                </div>
            </fieldset>
        </div>
    </form>
    {% endif %}

    {{ block('display_hooks') }}
</div>
{% endblock %}
{% block page_nav_links %}
    <p>
        {% if canBeCreated %}
            {% if hasPermission('MUPollsModule:Poll:', '::', 'ACCESS_EDIT') %}
                {% set createTitle = __('Create poll') %}
                <a href="{{ path('mupollsmodule_poll_' ~ routeArea ~ 'edit') }}" title="{{ createTitle|e('html_attr') }}" class="fa fa-plus">{{ createTitle }}</a>
            {% endif %}
        {% endif %}
        {% if showAllEntries == 1 %}
            {% set linkTitle = __('Back to paginated view') %}
            <a href="{{ path('mupollsmodule_poll_' ~ routeArea ~ 'view') }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% else %}
            {% set linkTitle = __('Show all entries') %}
            <a href="{{ path('mupollsmodule_poll_' ~ routeArea ~ 'view', { all: 1 }) }}" title="{{ linkTitle|e('html_attr') }}" class="fa fa-table">{{ linkTitle }}</a>
        {% endif %}
    </p>
{% endblock %}
{% block display_hooks %}
    
    {# here you can activate calling display hooks for the view page if you need it #}
    {# % if routeArea != 'admin' %}
        {% set hooks = notifyDisplayHooks(eventName='mupollsmodule.ui_hooks.polls.display_view', urlObject=currentUrlObject) %}
        {% for providerArea, hook in hooks %}
            {{ hook }}
        {% endfor %}
    {% endif % #}
{% endblock %}
